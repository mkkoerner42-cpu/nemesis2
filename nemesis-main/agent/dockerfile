FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

# Kleine System-Dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
 && rm -rf /var/lib/apt/lists/*

# 1) Requirements kopieren & installieren
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# 2) Quellcode kopieren
#    Build-Kontext ist "nemesis-main/agent", daher passt "src/"
COPY src /app/agent/src

# 3) Start der API
EXPOSE 8000
CMD ["python", "-m", "uvicorn", "agent.src.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
